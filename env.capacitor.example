# Capacitor Environment Configuration
# This file contains environment variables specific to the mobile app build

# Enable Capacitor build mode
CAPACITOR_BUILD=true

# App Configuration
NEXT_PUBLIC_APP_NAME=PathNiti
NEXT_PUBLIC_APP_DESCRIPTION=One-Stop Personalized Career & Education Advisor for Indian Students
NEXT_PUBLIC_APP_URL=https://pathniti.com

# Supabase Configuration (use your actual values)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Mobile-specific features
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_GEOLOCATION=true
NEXT_PUBLIC_ENABLE_CAMERA=true

# API Configuration
NEXT_PUBLIC_API_BASE_URL=https://pathniti.com/api

# Google Maps API Keys (SECURE - Use separate keys with proper restrictions)
# Frontend API key for Maps JavaScript API (restrict to HTTP referrers)
NEXT_PUBLIC_GOOGLE_MAPS_JS_API_KEY=your_frontend_maps_api_key_here
# Backend API key for Geocoding and Places API (restrict to IP addresses)
GOOGLE_MAPS_BACKEND_API_KEY=your_backend_maps_api_key_here

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_CHAT=true
NEXT_PUBLIC_ENABLE_ASSESSMENT=true
NEXT_PUBLIC_ENABLE_COLLEGE_SEARCH=true
NEXT_PUBLIC_ENABLE_SCHOLARSHIPS=true
